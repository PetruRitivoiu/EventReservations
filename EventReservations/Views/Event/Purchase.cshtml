@model EventReservations.Models.PurchaseOrderModel

@{
    ViewData["Title"] = "Purchase";
}
<style>
    input {
        margin-left: 25px;
    }

    #email {
        margin-left: 55px;
    }

    #phone {
        margin-left: 45px;
    }

    form {
        margin-top: 30px;
        display: table
    }
</style>
<h1>Reservation Form</h1>

<div class="container py-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <form method="post" asp-action="Purchase" asp-controller="Event">
                <div class="form-group row">
                    <input hidden asp-for="EventId" value="@Model.EventId" type="text" />

                    <div class="col-sm-6">
                        <label asp-for="EventName" for="eventName">Event Name</label>
                        <input readonly asp-for="EventName" value="@Model.EventName" type="text" class="form-control" id="inputFirstname" placeholder="First name">
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="EventAddress" for="eventAddress">Event Address</label>
                        <input readonly asp-for="EventAddress" value="@Model.EventAddress" type="text" class="form-control" id="inputLastname" placeholder="Last name">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="FirstName" for="inputFirstname">First name</label>
                        <input asp-for="FirstName" type="text" class="form-control" id="inputFirstname" placeholder="First name">
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="LastName" for="inputLastname">Last name</label>
                        <input asp-for="LastName" type="text" class="form-control" id="inputLastname" placeholder="Last name">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Email" for="inputEmail">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="inputEmail" placeholder="Email">
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Phone" for="inputAddressLine2">Phone</label>
                        <input asp-for="Phone" type="text" class="form-control" id="inputPhone" placeholder="Phone">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="City" for="inputCity">City</label>
                        <input asp-for="City" type="text" class="form-control" id="inputCity" placeholder="City">
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="Street" for="inputStreet">Street</label>
                        <input asp-for="Street" type="text" class="form-control" id="inputStreet" placeholder="Street">
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="PostalCode" for="inputPostalCode">Postal Code</label>
                        <input asp-for="PostalCode" type="text" class="form-control" id="inputPostalCode" placeholder="Postal Code">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="NumberOfTickets" for="inputNoOfTickets">No Of Tickets</label>
                        <input asp-for="NumberOfTickets" type="number" class="form-control" id="inputNoOfTickets" placeholder="Number Of Tickets">
                    </div>
                    <div class="col-sm-6">
                        <label for="inputPayment">Payment Method</label>
                        <div class="radio">
                            <label asp-for="PaymentMethod" class="radio-inline"><input asp-for="PaymentMethod" type="radio" value="Cash" checked> Cash </label>
                        </div>
                        <div class="radio">
                            <label asp-for="PaymentMethod" class="radio-inline"><input asp-for="PaymentMethod" type="radio" value="CreditCard"> Credit Card </label>
                        </div>

                    </div>
                </div>
                <input type="submit" name="submit" value="submit" class="btn btn-primary px-4 float-right" />
            </form>
        </div>
    </div>
</div>